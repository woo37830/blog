<link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css">

<h1>Posts</h1>

<table id="posts-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr >
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to "Show (#{post.comments.count})", post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<script>
  $(function(){
    $("#posts-table").dataTable();
  });
</script>

<% if current_user %>
	<%= link_to 'New Post', new_post_path %>
<% end %>
